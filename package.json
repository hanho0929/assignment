{
    "name": "challenge",
    "version": "1.0.0",
    "description": "Walmart Mexico Code Challenge",
    "scripts": {
        "build:css": "postcss packages/client/src/styles/tailwind.css -o packages/client/src/styles/app.css",
        "watch:css": "postcss packages/client/src/styles/tailwind.css -o packages/client/src/styles/app.css --watch",
        "bootstrap": "lerna bootstrap",
        "microservice": "cross-env NODE_ENV=development nodemon packages/microservice/src/index.js",
        "gql_server": "cross-env NODE_ENV=development nodemon packages/gql_server/src/index.js",
        "dev-client:start": "sleep 5 && cross-env NODE_ENV=development webpack serve --config webpack.config.js",
        "dev-client": "run-p watch:css dev-client:start",
        "start": "concurrently --kill-others \"npm run gql_server\" \"npm run microservice\" \"npm run dev-client\""
    },
    "author": "walmex-team",
    "license": "ISC",
    "dependencies": {
        "@emotion/react": "^11.4.0",
        "concurrently": "^6.2.0",
        "cross-env": "^7.0.3",
        "express": "^4.17.1",
        "lerna": "^4.0.0",
        "nodemon": "^2.0.7",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^5.2.0"
    },
    "devDependencies": {
        "@apollo/react-hooks": "^4.0.0",
        "@babel/cli": "^7.14.3",
        "@babel/core": "^7.14.3",
        "@babel/plugin-transform-runtime": "^7.14.3",
        "@babel/preset-env": "^7.14.4",
        "@babel/preset-react": "^7.13.13",
        "@babel/runtime": "^7.14.0",
        "@emotion/babel-plugin": "^11.3.0",
        "apollo-cache-inmemory": "^1.6.6",
        "apollo-client": "^2.6.10",
        "apollo-link-http": "^1.5.17",
        "babel-loader": "^8.2.2",
        "css-loader": "^5.2.6",
        "file-loader": "^6.2.0",
        "graphql": "^15.5.0",
        "graphql-tag": "^2.12.4",
        "html-webpack-plugin": "^5.3.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.0",
        "postcss-cli": "^8.3.1",
        "postcss-loader": "^5.3.0",
        "query-string": "^6.14.1",
        "react-spinners": "^0.11.0",
        "slick-carousel": "^1.8.1",
        "style-loader": "^2.0.0",
        "swiper": "^6.7.0",
        "tailwindcss": "^2.1.4",
        "url-loader": "^4.1.1",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0",
        "webpack-dev-server": "^3.11.2"
    }
}
